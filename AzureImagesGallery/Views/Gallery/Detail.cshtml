@model AzureImagesGallery.Models.GalleryImageDetailModel

<div class="container">
    <div class="row image-detail-container">
        <div class="image-detail">
            <img src="@Model.Url" alt="@Model.Title"/>
        </div>
    </div>
    <div class="row">
        <span>Title: @Model.Title</span>
        <span>Uploaded: @Model.CreatedOn</span>
    </div>
    <div class="row">
        <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">Back to Gallery</a>
    </div>
</div> 